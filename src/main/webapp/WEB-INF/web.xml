<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.img</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.png</url-pattern>
  </servlet-mapping>

  <!--Login (вход в систему)-->
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.minakov.servlet.LoginServlet</servlet-class>
  </servlet>

  <!--Каталог-->
  <servlet-mapping>
    <servlet-name>Catalog</servlet-name>
    <url-pattern>/catalog</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Catalog</servlet-name>
    <servlet-class>com.minakov.servlet.CatalogServlet</servlet-class>
  </servlet>
  <!--Корзина-->
  <servlet-mapping>
    <servlet-name>Cart</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Cart</servlet-name>
    <servlet-class>com.minakov.servlet.CartServlet</servlet-class>
  </servlet>

  <resource-ref>
    <description>MySQL Datasource example</description>
    <res-ref-name>jdbc/toyshop_db</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

</web-app>