<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.img</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.png</url-pattern>
  </servlet-mapping>

  <!--Фильтр входа на панель админа-->
  <filter-mapping>
    <filter-name>Authentication</filter-name>
    <url-pattern>/admin</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>Authentication</filter-name>
    <filter-class>com.minakov.servlet.AuthenticationFilter</filter-class>
  </filter>

  <!--Вход в систему-->
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.minakov.servlet.LoginServlet</servlet-class>
  </servlet>

  <!--Каталог-->
  <servlet-mapping>
    <servlet-name>Catalog</servlet-name>
    <url-pattern>/catalog</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Catalog</servlet-name>
    <servlet-class>com.minakov.servlet.CatalogServlet</servlet-class>
  </servlet>
  <!--Корзина-->
  <servlet-mapping>
    <servlet-name>Cart</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Cart</servlet-name>
    <servlet-class>com.minakov.servlet.CartServlet</servlet-class>
  </servlet>
  <!--Главная-->
  <servlet-mapping>
    <servlet-name>Main</servlet-name>
    <url-pattern>/main</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Main</servlet-name>
    <servlet-class>com.minakov.servlet.MainServlet</servlet-class>
  </servlet>
  <!--Кабинет-->
  <servlet-mapping>
    <servlet-name>Account</servlet-name>
    <url-pattern>/account</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Account</servlet-name>
    <servlet-class>com.minakov.servlet.AccountServlet</servlet-class>
  </servlet>
  <!--О товаре-->
  <servlet-mapping>
    <servlet-name>About</servlet-name>
    <url-pattern>/about</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>About</servlet-name>
    <servlet-class>com.minakov.servlet.AboutServlet</servlet-class>
  </servlet>
  <!--Админка заказы-->
  <servlet-mapping>
    <servlet-name>AdminOrders</servlet-name>
    <url-pattern>/admin/orders</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminOrders</servlet-name>
    <servlet-class>com.minakov.servlet.AdminServlet</servlet-class>
  </servlet>

  <!--Кнопки изменения количества товара-->
  <servlet-mapping>
    <servlet-name>PlusMinusButton</servlet-name>
    <url-pattern>/plusminus</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PlusMinusButton</servlet-name>
    <servlet-class>com.minakov.servlet.AjaxPlusMinusButtonServlet</servlet-class>
  </servlet>

  <!--Регистрация-->
  <servlet-mapping>
    <servlet-name>Registration</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Registration</servlet-name>
    <servlet-class>com.minakov.servlet.RegistrationServlet</servlet-class>
  </servlet>

  <!--Покупка-->
  <servlet-mapping>
    <servlet-name>Buy</servlet-name>
    <url-pattern>/thanks</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Buy</servlet-name>
    <servlet-class>com.minakov.servlet.BuyServlet</servlet-class>
  </servlet>

  <!--Покупка-->
  <servlet-mapping>
    <servlet-name>OrderDetails</servlet-name>
    <url-pattern>/order</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>OrderDetails</servlet-name>
    <servlet-class>com.minakov.servlet.OrderServlet</servlet-class>
  </servlet>

  <resource-ref>
    <description>MySQL Datasource example</description>
    <res-ref-name>jdbc/toyshop_db</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

</web-app>